<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body class="bg-gray-100 flex flex-col min-h-screen relative">
		<header class="fixed w-full z-10  bg-white ">
			{% block header %}
				{% include 'partials/nav.html.twig' %}
			{% endblock %}
		</header>

		<div class="pt-16 px-4">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="p-4 my-4 rounded-lg flex items-center space-x-3 w-1/4
																																			                    {% if label == 'success' %}
																																			                        bg-green-100 text-green-800 border border-green-300
																																			                    {% elseif label == 'error' %}
																																			                        bg-red-100 text-red-800 border border-red-300
																																			                    {% elseif label == 'info' %}
																																			                        bg-blue-100 text-blue-800 border border-blue-300
																																			                    {% elseif label == 'warning' %}
																																			                        bg-yellow-100 text-yellow-800 border border-yellow-300
																																			                    {% else %}
																																			                        bg-gray-100 text-gray-800 border border-gray-300
																																			                    {% endif %}
																																			                    transition duration-300 ease-in-out transform hover:scale-105
																																			                                                                                                                                                                                                                                                                                    ">
						<span>{{ message }}</span>
					</div>
				{% endfor %}
			{% endfor %}
		</div>

		<main class="flex-grow px-4"> {% block body %}{% endblock %}
			</main>


			<footer class="bg-white border-t border-gray-200 py-8">
				{% block footer %}
					{% include 'partials/footer.html.twig' %}
				{% endblock %}
			</footer>

		</body>
	</html>
